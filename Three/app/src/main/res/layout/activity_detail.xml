<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/back"
        android:src="@mipmap/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="0dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <ImageView
        android:id="@+id/image"
        android:src="@mipmap/xiaoqiao"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/introName"
        android:text="姓名："

        android:textSize="15dp"

        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:layout_marginBottom="20dp"

        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/name"
        android:text="小乔"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/introName"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Gender"
        android:text="性别："

        android:textSize="15dp"

        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp" />
    <EditText
        android:id="@+id/gender"
        app:layout_constraintLeft_toRightOf="@+id/Gender"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlack"
        android:text="女"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/national"
        android:text="势力： "
        android:textSize="15dp"

        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image"
        android:layout_marginTop="60dp"

        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/bossdom"
        app:layout_constraintTop_toTopOf="@+id/image"
        app:layout_constraintLeft_toRightOf="@+id/national"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:textSize="35dp"
        android:text="东吴"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:text="________________________________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/Date"
        android:text="生卒："
        android:textSize="15dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp" />
    <EditText
        android:id="@+id/date"
        android:text="1234-3241"
        android:layout_marginTop="45dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Hometown"
        android:text="籍贯："
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp" />
    <EditText
        android:id="@+id/hometown"
        android:text="首都"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Introduce"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="生平："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp" />
    <EditText
        android:id="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintLeft_toRightOf="@+id/Introduce"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="0dp"
        android:text="建安四年12月，周瑜随从孙策攻取庐江的皖城。破城后获得了桥公的两个女儿，都是绝色美女。其中年龄较小的被周瑜所纳 。当时孙策对周瑜开玩笑说：“桥公二女虽经战乱流离，有我们两个人作丈夫，她们也应该感到满足了。"
        android:layout_width="280dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/changed"
        android:background="@drawable/bg"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="50dp"
        android:text="提交"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/changed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="50dp"
        android:text="改毕"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>
