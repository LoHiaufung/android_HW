<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lohiaufung.lab9.FileEditor">



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="File Editor"
        android:textSize="36dp"
         />

    <EditText
        android:id="@+id/fileTitle"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="File Title Here"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/deleteBtn"
        android:text="DELETE"
        android:textColor="#FF0000"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/saveBtn"
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deleteBtn"
         />
    <Button
        android:id="@+id/loadBtn"
        android:text="LOAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deleteBtn"
        />
    <Button
        android:id="@+id/clearBtn"
        android:text="CLEAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/deleteBtn"
        />

    <EditText
        android:id="@+id/fileContent"
        android:layout_width="380dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fileTitle"
        app:layout_constraintBottom_toTopOf="@id/loadBtn"
        android:hint="File Content Here"
        android:gravity="top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
