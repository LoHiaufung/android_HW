<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lohiaufung.lab10.addItemDetailctivity">


    <TextView
    android:id="@+id/nameHintInAddItemDetail"
    android:text="姓名:"
    android:textSize="30dp"
    android:gravity="center"
    android:layout_width="80dp"
    android:layout_height="60dp" />

    <EditText
        android:id="@+id/nameInAddItemDetail"
        android:tag="姓名："
        app:layout_constraintBottom_toBottomOf="@+id/nameHintInAddItemDetail"
        app:layout_constraintLeft_toRightOf="@+id/nameHintInAddItemDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/birthdayHintInAddItemDetail"
        android:text="生日:"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/nameHintInAddItemDetail"/>

    <EditText
        android:id="@+id/birthdayInAddItemDetail"
        android:tag="姓名："
        app:layout_constraintBottom_toBottomOf="@+id/birthdayHintInAddItemDetail"
        app:layout_constraintLeft_toRightOf="@+id/birthdayHintInAddItemDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/giftHintInAddItemDetail"
        android:text="礼物:"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/birthdayHintInAddItemDetail"/>

    <EditText
        android:id="@+id/giftInAddItemDetail"
        android:tag="姓名："
        app:layout_constraintBottom_toBottomOf="@+id/giftHintInAddItemDetail"
        app:layout_constraintLeft_toRightOf="@+id/giftHintInAddItemDetail"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addItenInAddItemDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加条目"
        android:textColor="#FFFFFF"
        android:background="#00BA55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>
